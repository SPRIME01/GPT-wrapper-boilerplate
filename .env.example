# Core Application Settings
APP_ENV=development
DEBUG=True
LOG_LEVEL=DEBUG
SECRET_KEY=your-secret-key-here

# Database Configuration
DB_ENGINE=sqlite
DB_NAME=gpt_wrapper
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_ORG_ID=
DEFAULT_MODEL=gpt-4o
TEMPERATURE=0.7
MAX_TOKENS=2048

# CopilotKit Integration
COPILOTKIT_API_BASE=/copilotkit
COPILOTKIT_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
COPILOTKIT_STREAMING=True
COPILOTKIT_WEBSOCKET_ENABLED=True
COPILOTKIT_AUTH_ENABLED=True

# Security Settings
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
ENABLE_RATE_LIMITING=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_MINUTES=15

# Caching Configuration
CACHE_TYPE=memory
CACHE_EXPIRATION_SECONDS=300
ENABLE_RESPONSE_CACHE=True

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
GRAPHQL_PATH=/graphql
REST_API_PREFIX=/api
